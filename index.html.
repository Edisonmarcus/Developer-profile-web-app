<script>
  function method(){
    const fname = document.getElementById("fname").value;
    const lname = document.getElementById("lname").value;
    if (fname !== "" && lname !== "") {
      window.location.href = "second.html"; 
    } else {
      alert("PLEASE FILL THE FORM");
    }
  }
</script>

